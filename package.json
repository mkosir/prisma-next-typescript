{
  "name": "prisma-next-typescript",
  "description": "Minimal RESTful API boilerplate with Prisma, Next.js and TypeScript",
  "version": "0.0.0-development",
  "scripts": {
    "dev": "env-cmd -f envs/dev.env next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "lint": "eslint --max-warnings 0 .",
    "lint-fix": "eslint --fix .",
    "lint-staged-husky": "lint-staged",
    "tsc": "tsc -p tsconfigs/tsconfig.dev.json",
    "format-lint": "prettier --config .prettierrc --check --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "commit": "git-cz",
    "test-be-integration": "jest --verbose",
    "test-be-integration-watch": "jest --verbose --watch",
    "db-start": "docker-compose up",
    "db-view": "env-cmd -f envs/dev.env npx prisma studio",
    "db-migration-generate": "env-cmd -f envs/dev.env npx prisma migrate dev",
    "db-migration-run": "env-cmd -f envs/${ENV}.env npx prisma migrate deploy",
    "db-migration-run-dev": "ENV=dev npm run db-migration-run",
    "db-migration-run-stage": "ENV=stage npm run db-migration-run",
    "db-migration-run-prod": "ENV=prod npm run db-migration-run",
    "db-seed-run": "env-cmd -f envs/${ENV}.env ts-node --project tsconfigs/tsconfig.prisma-seed.json src/prisma/seed/index.ts",
    "db-seed-run-dev": "ENV=dev npm run db-seed-run"
  },
  "dependencies": {
    "next": "12.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-parallax-tilt": "^1.7.63"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@prisma/client": "^4.3.1",
    "@types/eslint": "^8.4.6",
    "@types/jest": "^29.0.0",
    "@types/node": "18.7.16",
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "commitizen": "^4.2.5",
    "dotenv": "^16.0.2",
    "env-cmd": "^10.1.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.2",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-no-array-reduce": "^1.0.62",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-testing-library": "^5.6.2",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "jest-config": "^29.0.2",
    "jest-environment-jsdom": "^29.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.3.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "tsc-files": "^1.1.3",
    "typescript": "^4.8.3"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
