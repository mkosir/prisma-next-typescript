{
  "name": "prisma-next-graphql",
  "description": "Minimal GraphQL boilerplate with Prisma and Next.js",
  "version": "0.0.0-development",
  "scripts": {
    "dev": "env-cmd -f envs/dev.env next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "lint": "eslint --max-warnings 0 . && npm run tsc",
    "lint-fix": "eslint --fix .",
    "lint-staged-husky": "lint-staged",
    "tsc": "tsc -p tsconfigs/tsconfig.dev.json",
    "format-lint": "prettier --config .prettierrc --check --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "commit": "git-cz",
    "db-start": "docker-compose up",
    "db-view": "env-cmd -f envs/dev.env npx prisma studio",
    "db-migration-generate": "env-cmd -f envs/dev.env npx prisma migrate dev",
    "db-migration-run": "env-cmd -f envs/${ENV}.env npx prisma migrate deploy",
    "db-migration-run-dev": "ENV=dev npm run db-migration-run",
    "db-migration-run-stage": "ENV=stage npm run db-migration-run",
    "db-migration-run-prod": "ENV=prod npm run db-migration-run",
    "db-seed-run": "env-cmd -f envs/${ENV}.env ts-node --project tsconfigs/tsconfig.prisma-seed.json src/prisma/seed/index.ts",
    "db-seed-run-dev": "ENV=dev npm run db-seed-run",
    "db-reset": "env-cmd -f envs/${ENV}.env npx prisma migrate reset -f",
    "db-reset-dev": "ENV=dev npm run db-reset"
  },
  "dependencies": {
    "next": "12.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-parallax-tilt": "^1.7.46"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@prisma/client": "^4.1.0",
    "@types/eslint": "^8.4.5",
    "@types/node": "18.0.6",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "commitizen": "^4.2.5",
    "dotenv": "^16.0.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-no-array-reduce": "^1.0.62",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-storybook": "^0.6.1",
    "eslint-plugin-testing-library": "^5.5.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-config": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.1.0",
    "ts-node": "^10.9.1",
    "tsc-files": "^1.1.3",
    "typescript": "^4.7.4"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
